<div class="container-fluid">
  <div class="jumbotron sign-up">

   <div class="row">
    <div class="col-md-5 col-sd-12 sign-up-content">
      <h2>SIGN UP</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <br />
        <%= f.email_field :email, autofocus: true, placeholder: "Enter Email" %>
      </div>

      <div class="form-group">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "Enter Password" %>
      </div>

      <div class="form-group">
        <br />
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
      </div>

      <%= submit_tag("Sign up", class: "btn btn-warning") %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
  </div><!--/jumbotron sign-up -->
</div><!--/container-fluid -->