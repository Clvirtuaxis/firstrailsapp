<div class="container-fluid">
  <div class="jumbotron log-in">

   <div class="row">
    <div class="col-md-5 col-sd-12 log-in-content">
      <h2>LOG IN</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <br />
        <%= f.email_field :email, autofocus: true, placeholder: "Enter Email"%>
      </div>

      <div class="form-group">
        <br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "Enter Password" %>
      </div>

      <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end -%>
      <%= submit_tag("Log in", class: "btn btn-warning") %>
      <% end %>
    </div>
  </div>
</div><!--/jumbotron log-in -->
</div><!--/container-fluid -->

<%= render "devise/shared/links" %>
